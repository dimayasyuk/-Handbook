<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <jsp-config>
        <taglib>
            <taglib-uri>customtags</taglib-uri>
            <taglib-location>/WEB-INF/tld/custom.tld</taglib-location>
        </taglib>
    </jsp-config>

    <filter-mapping>
        <filter-name>filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>filter</filter-name>
        <filter-class>filter.VocabularyFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>filter.EncodingFilter</filter-class>
    </filter>

    <servlet>
        <servlet-name>section</servlet-name>
        <servlet-class>servlets.SectionServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>section</servlet-name>
        <url-pattern>/section/*</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>class</servlet-name>
        <servlet-class>servlets.ClassServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>class</servlet-name>
        <url-pattern>/class/*</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>jdbcDriver</param-name>
        <param-value>com.mysql.cj.jdbc.Driver</param-value>
    </context-param>

    <context-param>
        <param-name>jdbcURL</param-name>
        <param-value>jdbc:mysql://localhost:3306/vocabulary?serverTimezone=UTC
        </param-value>
    </context-param>

    <context-param>
        <param-name>jdbcUsername</param-name>
        <param-value>root</param-value>
    </context-param>

    <context-param>
        <param-name>jdbcPassword</param-name>
        <param-value>12345</param-value>
    </context-param>

</web-app>